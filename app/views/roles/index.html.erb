<h1>Listing roles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Permission</th>
    <th>Desc</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.permission %></td>
    <td><%= role.desc %></td>
    <td><%= role.state %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate(@roles, :renderer => WillPaginate::ActionView::LinkRenderer, :previous_label => "<<上一页",
                  :next_label => "下一页>>", :class => "pagination") %>
<br />

<%= link_to 'New Role', new_role_path %>
